{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fast Chat",
  "version": "0.1.0",
  "identifier": "com.fastchat",
  "build": {
    "beforeDevCommand": "cd frontend && (test -d node_modules || npm install) && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "appimage"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Fast Chat",
        "width": 700,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "alwaysOnTop": false,
        "visibleOnAllWorkspaces": true,
        "center": true,
        "visible": true,
        "devtools": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability with event permissions",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    }
  }
}
